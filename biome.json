{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!**/public/**/*", "!**/*.d.ts", "!**/.vscode/**/*", "!**/jsconfig.json", "!**/.babelrc", "!**/.hintrc"]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 150,
    "attributePosition": "auto",
    "bracketSpacing": true
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "rules": {
      "recommended": true,
      "nursery": {},
      "correctness": {
        "noUnusedVariables": "error",
        "noUndeclaredVariables": "error"
      },
      "performance": {
        "noDelete": "warn"
      },
      "complexity": {
        "noForEach": "warn"
      },
      "suspicious": {
        "noConsole": { "level": "error", "options": { "allow": ["error"] } }
      },
      "style": {
        "noParameterAssign": "off",
        "noRestrictedGlobals": "error",
        "noCommonJs": "error",
        "noNestedTernary": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto",
      "bracketSpacing": true
    }
  },
  "overrides": [
    {
      "includes": ["**/client/**"],
      "linter": {
        "rules": {
          "a11y": {
            "useGenericFontNames": "off",
            "noLabelWithoutControl": "off"
          },
          "correctness": {
            "useJsxKeyInIterable": "off"
          }
        }
      },
      "javascript": {
        "globals": ["app", "tag"]
      }
    },
    {
      "includes": ["**/server/**", "**/webpack.config.js", "**/cron-jobs/**", "**/dev/**", "**/postcss.config.js"],
      "linter": {
        "rules": {
          "nursery": {},
          "suspicious": {
            "noConsole": { "level": "off", "options": { "allow": ["log"] } }
          },
          "style": {
            "noCommonJs": "off"
          }
        }
      }
    }
  ]
}
